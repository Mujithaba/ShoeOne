                        <th class="text-white">Details</th>
                    </tr>
                </thead>
                <tbody>
                    <% let slno = 1 %>
                
                    <% for (const order of orderData) { %>
                        <tr>
                            <td><%= slno %></td>
                            <td><%= order.orderDate.toLocaleString('en-AU',{year:"numeric",month:"2-digit",day:"2-digit"}) %></td>
                            <td>
                                <% let no = 1 %>

                                <% for (const product of order.products) { %>
                                    <%=  no  %>-
                                    <%= product.productId.productName %> <br> (Qty: <%= product.quantity %>)<br><br><br>
                                    <% no++; %>
                                <% } %>
                            </td>
                            <td>â‚¹<%= order.totalAmount %></td>
                            <td>
                                <% let n = 1 %>

                                <% for (const product of order.products) { %>
                                    
                                    <%=  n  %>-  <img src="/Image/<%= product.productId.image[0] %>" alt="<%= product.productId.productName %>" style="max-width: 50px; border-radius: 5px; margin-bottom: 3px;">&nbsp;&nbsp;
                                    <% n++; %>
                                    <% } %>
                            </td>
                            <td><%= order.paymentMethod %></td>
                            <td>
                                <%= order.shippingAddress.fullname %> <br>
                                <%= order.shippingAddress.mobile %> <br>
                                <%= order.shippingAddress.address %> <br>
                                <%= order.shippingAddress.pincode %> <br>
                                <%= order.shippingAddress.city %> <br>
                                <%= order.shippingAddress.state %>
                            </td>
                            <td><a href="/views-Order?id=<%=order._id%>" class="btn btn-dark" >Details</i></a></td>
                        </tr>
                        <% slno++; %>
                    <% } %>
                </tbody>
                
                
                
            </table>
