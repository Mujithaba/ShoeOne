            <h1 class="mt-5 mb-4 text-center"><b>ORDER DETAILS</b></h1>
            <input type="hidden" name="order" value="<%= orderData %>">
            <% for (const product of orderData.products) {%>
                <div class="order-row">

                    <img src="/Image/<%= product.productId.image[0] %>" class="img-fluid" alt="Product Image"
                        style="width: 180px; height: 200px; border-radius: 7px;">
                    <div class="order-details">
                        <!-- <div class="border-btm"> -->
                        <h5>
                            <%= product.productId.productName %>
                        </h5>
                        <p>
                                <strong>OrderID:</strong>&nbsp;<%= orderData._id %> <br>
                                <strong>Quantity:</strong>&nbsp; <%= product.quantity %><br>
                                    <strong>Price:</strong>&nbsp; ₹<%= product.productId.Price %> /- <br>
                                        <strong>Ordered On:</strong>&nbsp;
                                        <%=
                                            orderData.orderDate.toLocaleString('en-AU',{year:"numeric",month:"2-digit",day:"2-digit"})%> <br>

                                            <!-- <strong>Total Price:</strong>&nbsp; ₹<%= orderData.totalAmount %> /- <br> -->
                        </p><br>
                        <!-- </div> -->
                        <div class="status-div">
                           <strong class="status-p">Status:-</strong>
                            <h5 class="">
                                <%= product.ProductOrderStatus %>
                            </h5>
                        

                            <% if(product.ProductOrderStatus=='cancelled' ) {%>
                                <p class="p-cancel"><%= product.ProductOrderStatus %></p>

                                <% } else { %>
                                    <% if(product.ProductOrderStatus=='pending' || product.ProductOrderStatus=='processed' || product.ProductOrderStatus=='shipping') {%>
                                        <button class=" cancel-btn" onclick="cancelFunction( '<%= product.productId._id %>' )">Cancel</button>

                                        <% } %>
                                                <% } %>
                                            

                        </div>


                    </div>

                </div>
                <%}%>
        </div>
    </div>
