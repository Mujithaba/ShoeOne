<%- include('../layouts/header.ejs') %>

    <style>
        body {
            background-color: #f8f9fa;
        }

        .wallet-container {
            max-width: 600px;
            margin: 50px auto;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .wallet-header {
            text-align: center;
            margin-bottom: 20px;
        }

        .balance {
            font-size: 36px;
            font-weight: bold;
            color: #2fc52f;
            /* Bootstrap secondary color */
            text-align: center;
            margin-bottom: 20px;
        }

        .transaction-card {
            border: 1px solid #dee2e6;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 15px;
            background-color: #f8f9fa;
        }

        .credit {
            color: #28a745;
            /* Bootstrap success color */
            font-weight: bold;

        }

        .debit {
            color: #dc3545;
            /* Bootstrap danger color */
            font-weight: bold;
        }

        .transaction-amount {
            font-size: 24px;
            font-weight: bold;
            margin-left: 100px;
        }

        .transaction-amount-debit {
            font-size: 24px;
            font-weight: bold;
            margin-left: 105px;
            color:  #dc3545;   
        }

        .transaction-reason {
            margin-left: 130px;
            color: rgb(37, 59, 59);
        }

        .transaction-buttons {
            text-align: center;
            margin-top: 20px;
        }

        .btn-transaction {
            margin-right: 10px;
        }
    </style>



