    <% if(typeof message1 !=='undefined' ) { %>
        <div class="alert alert-warning text-center mb-4">
            <%= message1 %>
        </div>
        <% } %>

            <!-- wallet start here -->

            <div class="container wallet-container">
                <div class="wallet-header">
                    <h1>Your Sleek Wallet</h1>
                </div>
                <div class="balance">
                    ₹ <%= userData.wallet.balance %>/-
                </div>
                <% for(let wallet of userData.wallet.history) {%>
                    <% if (wallet.type==='Credit' ) { %>
                        <div class="transaction-card">
                            <span class="credit">
                                <%= wallet.type %>
                            </span>
                            <span class="transaction-reason">
                                <%= wallet.reason %>
                            </span>
                            <span class="transaction-amount">+ ₹<%= wallet.amount %></span>
                        </div>
                        <% } else { %>

                            <div class="transaction-card">
                                <span class="debit">
                                    <%= wallet.type %>
                                </span>
                                <span class="transaction-reason">
                                    <%= wallet.reason %>
                                </span>
                                <span class="transaction-amount-debit te">- ₹<%= wallet.amount %></span>
                            </div>
                            <%}%>
                                <%}%>
            </div>









            <!-- end of the wallet -->



