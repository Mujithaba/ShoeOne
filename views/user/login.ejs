	<link rel="stylesheet" type="text/css" href="/vendor/css-hamburgers/hamburgers.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/animsition/css/animsition.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/select2/select2.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/daterangepicker/daterangepicker.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/css/util.css">
	<link rel="stylesheet" type="text/css" href="/css/main.css">
	<!--===============================================================================================-->

	<style>
		#signup {
			color: black;
			margin-left: 80px;
			margin-top: 100px;
		}

		/* .signupforget:hover{
color: rgb(241, 49, 49);
		} */
		
	</style>

</head>

<body>

	<div class="limiter">
		<div class="container-login100" style="background-image: url('/img/bg-01.jpg');">
			<div class="wrap-login100 p-t-30 p-b-50">
				<span class="login100-form-title p-b-41">
					Account Login
				</span>
				<form action="/login" class="login100-form validate-form p-b-33 p-t-5" method="post">

					<!-- display a success or error message -->
					<% if(typeof message !=='undefined' ) { %>
						<div class="alert alert-warning text-center mb-4">
							<%= message %>
						</div>
						<% } %>

							<!-- display a verify error message -->

							<% if(typeof verify !=='undefined' ) { %>
								<div class="alert alert-warning text-center mb-4">
									<%= verify %>
										<p><em><a href="/OTPvarification" style="font-weight: 600;">Click here for
													Verification</a></em></p>

								</div>
								<% } %>

									<div class="wrap-input100 validate-input" data-validate="Enter email">
										<input class="input100" type="email" id="email" name="email" placeholder="email" required>
										<span class="focus-input100" data-placeholder="&#xe82a;"></span>
									</div>

									<div class="wrap-input100 validate-input" data-validate="Enter password">
										<input class="input100" type="password" id="password" name="password" placeholder="password" required>
										<span class="focus-input100" data-placeholder="&#xe80f;"></span>
									</div>

									<div class="container-login100-form-btn m-t-32">
										<button class="login100-form-btn">
											Login
										</button>
									</div><br>
									<a href="./register" id="signup">Don't have an account..?&nbsp;&nbsp;&nbsp; <u><i
											style="color: rgb(38, 38, 80); font-weight: 600;">Sign Up</i></u></a>
											<br><br>
											<a href="./forgetStep" id="signup" class="signupforget" style="margin-left: 130px; color: black; font-weight: 600;"><i>Forgot Password...</i></a>
				</form>
			</div>
		</div>
	</div>


	<div id="dropDownSelect1"></div>

	<!--===============================================================================================-->
	<script src="/vendor/jquery/jquery-3.2.1.min.js"></script>
	<!--===============================================================================================-->
	<script src="/vendor/animsition/js/animsition.min.js"></script>
	<!--===============================================================================================-->
	<script src="/vendor/bootstrap/js/popper.js"></script>
	<script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
	<!--===============================================================================================-->
	<script src="/vendor/select2/select2.min.js"></script>
	<!--===============================================================================================-->
	<script src="/vendor/daterangepicker/moment.min.js"></script>
	<script src="/vendor/daterangepicker/daterangepicker.js"></script>
	<!--===============================================================================================-->
	<script src="/vendor/countdowntime/countdowntime.js"></script>
	<!--===============================================================================================-->
	<script src="/js/loginmain.js"></script>

</body>

</html>

















