            border-radius: 10px;
            /* background: linear-gradient(135deg, #fdfbfb, #ebedee); */
            /* box-shadow: 0 0 20px rgba(0, 0, 0, 0.1); */
        }

        #addressDetails {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }

        .addressItem {
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            position: relative;
            transition: box-shadow 0.3s ease;
        }

        .addressItem:nth-child(even) {
            background-color: #f9f9f9;
            /* Alternate color for even items */
        }

        .addressItem:hover {
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        }

        .addressItem h3 {
            color: #333;
            margin-bottom: 10px;
        }

        .addressItem p {
            margin: 5px 0;
            font-size: 14px;
            color: #555;
        }

        button {
            background-color: #4caf50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #45a049;
        }

        .editBtn {
            background-color: #072d47;
        }

        .deleteBtn {
            background-color: #d7d7d7;
        }

        #btnHover {
            color: white;
            background-color: black;
            text-decoration: none;
        }

        #btnHover:hover {
            color: rgb(0, 0, 0);
            background-color: rgb(255, 255, 255);
        }

        #dlt {
            padding: 7px;
            margin-left: 240px;
            background-color: rgb(128, 8, 8);
        }

        #dlt:hover {
            background-color: rgb(224, 15, 15);
        }

        #walletHover {
            background-color: white;
            color: black;

        }

        #walletHover {
            background-color: black;
            color: white;
        }
