    <script>

        // *****************************Add address************************************************
        document.addEventListener('DOMContentLoaded', () => {
            const addressBtn = document.getElementById('addAddress');
            addressBtn.addEventListener('click', addAddress);

            async function addAddress() {
                const addAddressData = {
                    fullname: document.getElementById('fullname').value,
                    mobno: document.getElementById('mobno').value,
                    address: document.getElementById('address').value,
                    pincode: document.getElementById('pincode').value,
                    city: document.getElementById('city').value,
                    state: document.getElementById('state').value,
                };

                // Validate form data
                const isValid = validateForm(addAddressData);

                if (isValid) {
                    try {
                        const response = await fetch('/addressAdd', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({ addAddress: addAddressData })
                        });

                        const data = await response.json();

                        if (data.message) {

                            console.log(data.addedAddress, "hghjfhghg");
                            if (data.addedAddress) {
                                // Assuming data.addedAddress is an object with user information
                                const userAddress = data.addedAddress;

                                // Construct the HTML content using the user information
                                const addressHTML = `
                                        
                                        <p> ${userAddress.fullname}</p>
                                        <p>${userAddress.mobile}</p>
                                        <p> ${userAddress.address}</p>
                                        <p> ${userAddress.pincode}</p>
                                        <p> ${userAddress.city}</p>
                                        <p> ${userAddress.state}</p>

                                        <a href="/editAddress?id= ${userAddress._id}  "
                                                    class="btn btn-warning">Edit</a>


                                                <!-- delete address button -->
                                                <button type="button" id="dlt" data-address-id="${userAddress._id}"
                                                    class="delete-button btn-danger"><i
                                                        class="fa-solid fa-trash"></i></button>
                                   
                                    `;

                                // Update the content of the element with id 'addressDetails'
                                let addressTab = document.getElementById('addressDetails');
                                const div = document.createElement('div');
                                div.setAttribute("class", "addressItem");
                                div.innerHTML = addressHTML
                                addressTab.appendChild(div)
                                let button = document.querySelector(`[data-address-id="${userAddress._id}"]`)
                                button.addEventListener('click', () => {
                                    let addressId = button.getAttribute('data-address-id');
                                    console.log(addressId);
                                    // let url ='/deleteAddress'
                                    fetch('/deleteAddress/', {
                                        method: 'post',
                                        headers: {
                                            'Content-Type': 'application/json'
                                        },
                                        body: JSON.stringify({ addressId })
                                    }).then(response => {
                                        return response.json();
                                    }).then(data => {
                                        if (data.message) {
                                            console.log(data.message);

                                            Swal.fire({
                                                position: "center",
                                                icon: "success",
                                                title: data.message,
                                                showConfirmButton: false,
                                                timer: 1500
                                            });
                                            button.parentNode.remove()
                                            // location.reload()

                                        } else {
                                            Swal.fire({
                                                position: "center",
                                                icon: "error",
                                                title: data.error,
                                                showConfirmButton: false,
                                                timer: 1500
                                            });
                                        }
                                    }).catch(error => {
                                        console.log(error);
                                    });
                                });
                            }



                            Swal.fire({
                                position: 'center',
                                icon: 'success',
                                title: data.message,
                                showConfirmButton: false,
                                timer: 1500
                            });
                            // Clear form fields after successful submission
                            clearFormFields();
                        } else {
                            Swal.fire({
                                position: 'center',
                                icon: 'info',
                                title: data.error,
                                showConfirmButton: false,
                                timer: 1500
                            });
                        }
                    } catch (error) {
                        console.error(error);
                    }
                }
            }

            function validateForm(data) {
                clearErrors();

                // Validate each field
                if (!data.fullname || !/^[a-zA-Z]+(?:\s[a-zA-Z]+)*$/.test(data.fullname)) {
                    showError('fullnameError', 'Please enter your full name with valid format');
                    return false;
                }


                if (!data.mobno || !/^\d{10}$/.test(data.mobno)) {
                    showError('mobnoError', 'Please enter a valid 10-digit mobile number');
                    return false;
                }

                if (!data.address || !/^[a-zA-Z]+(?: [a-zA-Z]+)*(?: \([^)]+\))?$/.test(data.address)) {
                    showError('addressError', 'Please enter a valid address');
                    return false;
                }


                if (!data.pincode || !/^\d{6}$/.test(data.pincode)) {
                    showError('pincodeError', 'Please enter a valid 6-digit pincode');
                    return false;
                }

                if (!data.city || !/^[^\s][a-zA-Z\s&'-]*$/.test(data.city)) {
                    showError('cityError', 'Please enter a valid address');
                    return false;
                }

                if (!data.state || !/^[a-zA-Z]+$/.test(data.state)) {
                    showError('stateError', 'Please enter your state');
                    return false;
                }

                return true;
            }

            function showError(elementId, message) {
                const errorElement = document.getElementById(elementId);
                if (errorElement) {
                    errorElement.textContent = message;
                    errorElement.classList.add('error'); // Add the 'error' class
                }
            }

            function clearErrors() {
                const errorElements = document.querySelectorAll('.error');
                errorElements.forEach((element) => {
                    element.textContent = '';
                });
            }

            function clearFormFields() {
                // Clear each form field
                document.getElementById('fullname').value = '';
                document.getElementById('mobno').value = '';
                document.getElementById('address').value = '';
                document.getElementById('pincode').value = '';
                document.getElementById('city').value = '';
                document.getElementById('state').value = '';

                // Clear any existing error messages
                clearErrors();
            }
        });


        // *******************delete address from address manager***********************************

        document.querySelectorAll('.delete-button').forEach((button) => {
            button.addEventListener('click', () => {
                let addressId = button.getAttribute('data-address-id');
                console.log(addressId);
                // let url ='/deleteAddress'
                fetch('/deleteAddress/', {
                    method: 'post',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ addressId })
                }).then(response => {
                    return response.json();
                }).then(data => {
                    if (data.message) {
                        console.log(data.message);

                        Swal.fire({
                            position: "center",
                            icon: "success",
                            title: data.message,
                            showConfirmButton: false,
                            timer: 1500
                        });
                        button.parentNode.remove()
                        // location.reload()

                    } else {
                        Swal.fire({
                            position: "center",
                            icon: "error",
                            title: data.error,
                            showConfirmButton: false,
                            timer: 1500
                        });
                    }
                }).catch(error => {
                    console.log(error);
                });
            });
        });




        // **************************change password script**********************************************************

        document.addEventListener('DOMContentLoaded', () => {
            const changePasswordBtn = document.getElementById('changePassword');
            changePasswordBtn.addEventListener('click', validateAndChangePassword);

            async function validateAndChangePassword() {
                const currentPassword = document.getElementById('CurrentPassword').value;
                const newPassword = document.getElementById('NewPassword').value;
                const repeatPassword = document.getElementById('RepeatPassword').value;



                // Validate new password
                if (currentPassword.length < 8) {
                    displayError('passwordError', ' must be enter current password');
                    document.getElementById('CurrentPassword').value = '';
                    return;
                } else {
                    hideError('passwordError');
                }



                if (newPassword.length < 8) {
                    displayError('passwordError', 'Password must be at least 8 characters long');
                    document.getElementById('NewPassword').value = '';
                    return;
                } else {
                    hideError('passwordError');
                }

                // Validate password match
                if (newPassword !== repeatPassword) {
                    displayError('passwordMatchError', 'Passwords do not match');
                    document.getElementById('RepeatPassword').value = '';
                    return;
                } else {
                    hideError('passwordMatchError');
                }

                // validation passes, proceed with the password change
                try {
                    const response = await fetch('/passwordChange', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ currentPassword, newPassword, repeatPassword })
                    });

                    const data = await response.json();

                    if (data.message) {
                        Swal.fire({
                            position: 'center',
                            icon: 'success',
                            title: data.message,
                            showConfirmButton: false,
                            timer: 1500
                        });
                        // Clear input fields after success
                        document.getElementById('CurrentPassword').value = '';
                        document.getElementById('NewPassword').value = '';
                        document.getElementById('RepeatPassword').value = '';
                    } else if (data.msg) {
                        Swal.fire({
                            position: 'center',
                            icon: 'info',
                            title: data.msg,
                            showConfirmButton: false,
                            timer: 1500
                        });
                        document.getElementById('CurrentPassword').value = '';
                    } else {
                        Swal.fire({
                            position: 'center',
                            icon: 'info',
                            title: data.error,
                            showConfirmButton: false,
                            timer: 1500
                        });
                        document.getElementById('CurrentPassword').value = '';
                        document.getElementById('NewPassword').value = '';
                        document.getElementById('RepeatPassword').value = '';
                    }
                } catch (error) {
                    console.error(error);
                }
            }

            function displayError(elementId, message) {
                const errorElement = document.getElementById(elementId);
                errorElement.textContent = message;
                errorElement.style.display = 'block';
            }

            function hideError(elementId) {
                const errorElement = document.getElementById(elementId);
                errorElement.textContent = '';
                errorElement.style.display = 'none';
            }
        });



        //for copying referral code
        const refCodeCopyBtn = document.getElementById('refCodeCopyBtn')
        refCodeCopyBtn.addEventListener('click', copyRefCode)

        async function copyRefCode() {

            contentToCopy = this.dataset.link
            const tempInput = document.createElement('input');
            tempInput.value = contentToCopy;

            // adding the input element to  docmnt
            document.body.appendChild(tempInput);

            tempInput.select();
            tempInput.setSelectionRange(0, 99999);

            //copy command
            document.execCommand('copy');

            document.body.removeChild(tempInput);

            const Toast = Swal.mixin({
                toast: true,
                position: "center",
                showConfirmButton: false,
                timer: 3000,
                timerProgressBar: true,
                didOpen: (toast) => {
                    toast.onmouseenter = Swal.stopTimer;
                    toast.onmouseleave = Swal.resumeTimer;
                }
            });
            Toast.fire({
                icon: "success",
                title: "Copied successfully"
            });
        }


