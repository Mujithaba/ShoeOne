            <!-- validation -->
            <script>
                function validateForm(form) {
                    clearErrors();

                    const data = {
                        fullname: form.elements['name'].value,
                        mobno: form.elements['mobile'].value,
                        address: form.elements['address'].value,
                        pincode: form.elements['pincode'].value,
                        city: form.elements['city'].value,
                        state: form.elements['state'].value,
                    };

                    if (!data.fullname || !/^[a-zA-Z]+(?:\s[a-zA-Z]+)*$/.test(data.fullname)) {
                        showError('fullnameError', 'Please enter your full name with a valid format');
                        return false;
                    }

                    if (!data.mobno || !/^\d{10}$/.test(data.mobno)) {
                        showError('mobnoError', 'Please enter a valid 10-digit mobile number');
                        return false;
                    }

                    if (!data.address || !/^[a-zA-Z0-9\s,'-]+(?:\s[a-zA-Z0-9\s,'-]+)*$/.test(data.address)) {
                        showError('addressError', 'Please enter a valid address');
                        return false;
                    }

                    if (!data.pincode || !/^\d{6}$/.test(data.pincode)) {
                        showError('pincodeError', 'Please enter a valid 6-digit pincode');
                        return false;
                    }

                    if (!data.city || !/^[^\s][a-zA-Z\s&'-]*$/.test(data.city)) {
                        showError('cityError', 'Please enter a valid city');
                        return false;
                    }

                    if (!data.state || !/^[a-zA-Z\s&'-]*$/.test(data.state)) {
                        showError('stateError', 'Please enter a valid state');
                        return false;
                    }

                    return true;
                }

                function clearErrors() {
                    const errorElements = document.querySelectorAll('.error-message');
                    errorElements.forEach(element => {
                        element.textContent = '';
                    });
                }

                function showError(elementId, errorMessage) {
                    const errorElement = document.getElementById(elementId);
                    errorElement.textContent = errorMessage;
                }
            </script>



