    <!-- Main wrapper -->
    <div class="body-wrapper">
        <!-- Header Start -->
        <!-- ... (unchanged) ... -->

        <div class="container-fluid">
            <h1 class="mt-4 mb-4 text-center"><b>Edit Product</b></h1>

            <form id="editProductForm" action="/admin/updateProduct" method="post" enctype="multipart/form-data">
                <!-- Add a hidden field for the product ID -->
                <input type="hidden" name="productID" value="<%=product._id%>">

                <!-- Existing Images (You can use the existing images or upload new ones) -->
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="existingImages"><b>Existing Images:</b></label>
                        <!-- Display existing images or provide an option to delete them -->
                        <!-- Example: <img src="<%= product.image1 %>" alt="Image 1"> -->
                        <input type="file" class="form-control" id="existingImages" name="Image"
                            accept="image/<%= product.image %>"  multiple>
                    </div>
                </div>

                <!-- Product Details (Display existing data in input fields) -->
                <div class="form-group">
                    <label for="productName">Product Name:</label>
                    <input type="text" class="form-control" id="productName" name="productName"
                        value="<%= product.productName %>" required>
                </div>

                <div class="form-group">
                    <label for="offerPrice">Price:</label>
                    <input type="number" class="form-control" id="offerPrice" name="Price" min="0" step="0.01"
                        value="<%= product.Price %>">
                </div>

                <div class="form-group">
                    <label for="productSize">Product Size:</label>
                    <input type="text" class="form-control" id="productSize" name="productSize"
                        value="<%= product.productSize %>">
                </div>

                <div class="form-group">
                    <label for="stock">Stock:</label>
                    <input type="number" class="form-control" id="stock" name="stock" min="0"
                        value="<%= product.stock %>" required>
                </div>

                <div class="form-group">

                    <label for="category">Category:</label>
                    <select class="form-control" id="category" name="category">
                        <% for(let i=0; i < fullCategory.length; i++) { %>
                            <option value="<%= fullCategory[i]._id %>">
                                <%= fullCategory[i].categoryName %>
                            </option>
                            <% } %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea class="form-control" id="description" name="description" rows="4"
                        required> <%= product.description %></textarea>
                </div>

                <button type="submit" class="btn btn-primary" onclick="return confirm('Are you want to update the product')">Update Product</button>
            </form>
        </div>
    </div>

    <%- include('../layouts/footer.ejs') %>