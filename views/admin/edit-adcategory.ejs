<%- include('../layouts/header.ejs') %>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            min-height: 100vh;
        }

        .edit-form {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: 80%;
            max-width: 600px;
            margin: 20px auto;
        }

        .edit-form label {
            display: block;
            margin-bottom: 8px;
        }

        .edit-form input {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
            margin-bottom: 10px;
        }

        .edit-form button {
            background-color: #4CAF50;
            color: white;
            padding: 10px;
            border: none;
            cursor: pointer;
        }

        .edit-form button:hover {
            background-color: #45a049;
        }
    </style>


    <div class="edit-form">
        <h2>Edit Category</h2>
        <form action="/admin/update-category" method="post">
            <input type="hidden" name="categoryID" value="<%=category._id%>">
            <label for="editCategoryName">Category Name:</label>
            <input type="text" id="editCategoryName" name="editCategoryName" value="<%= category.categoryName %>"
                required>

            <button type="submit">Update</button>
        </form>
    </div>

    <%- include('../layouts/footer.ejs') %>