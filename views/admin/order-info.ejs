        .status-div {
            background-color: #ecf0f1;
            padding: 15px;
            border-radius: 8px;
            width: 300px;
            display: inline-block;
        }

        .status-p {
            margin: 0;
        }

        strong {
            font-weight: bold;
            color: #333;
        }

        .status-select {
            padding: 10px;
            font-size: 14px;
            border: 1px solid #bdc3c7;
            border-radius: 5px;
            width: 100%;
            appearance: none;
            background-color: #fff;
            color: #333;
            cursor: pointer;
            transition: border-color 0.3s, background-color 0.3s;
        }

        .status-select:hover {
            border-color: #7f8c8d;
        }

        .status-select:focus {
            outline: none;
            border-color: #3498db;
        }

        /* Optional: Add some spacing between the label and the dropdown */
        .status-p strong {
            margin-right: 10px;
        }

        /* address div style */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
