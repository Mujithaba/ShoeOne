<script>
    document.addEventListener("DOMContentLoaded", function () {
  document.querySelectorAll('.statusOption').forEach((optionSt,index) => {
    optionSt.addEventListener('change', statusOp);

    async function statusOp(event) {
      let orderStatus = event.currentTarget;
      let productStatus = orderStatus.value;
      let orderID = optionSt.getAttribute('data-orderId');
      let productID = optionSt.getAttribute('data-proId');

      // Debugging statements
      console.log('productStatus:', productStatus);
      console.log('orderID:', orderID);
      console.log('productID:', productID);

      try {
        const response = await fetch('/admin/statusChange', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ productID, productStatus, orderID })
        });

        const data = await response.json();

        if (data.message) {
          // Handle success
          console.log("Product added to cart");
          Swal.fire({
            position: "center",
            icon: "success",
            title: data.message,
            showConfirmButton: false,
            timer: 1500
          });
          setTimeout(function () {
                        location.reload()
                    }, 1000);

        } else {
          Swal.fire({
            position: "center",
            icon: "info",
            title: data.msg,
            showConfirmButton: false,
            timer: 1500
          });
        }
      } catch (error) {
        // Handle error
        console.error(error);
      }
    }
  });
});


</script>


    
