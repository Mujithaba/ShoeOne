    <script>
        // Initialize datepickers
        $(document).ready(function () {
            $('.datepicker').datepicker({
                format: 'dd/mm/yyyy',
                autoclose: true
            });
        });



        // Add click event for the "Generate Report" button
        document.getElementById('generateReportBtn').addEventListener('click', function () {
            let startDate = document.getElementById('fromDate').value;
            let endDate = document.getElementById('toDate').value;

            console.log('Generating report from', startDate, 'to', endDate);


            fetch('/admin/salesReport', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ startDate, endDate })
            }).then(response => {
                return response.json();
            }).then(data => {
                if (data.message) {
                    console.log(data.message);

                    Swal.fire({
                        position: "center",
                        icon: "success",
                        title: data.message,
                        showConfirmButton: false,
                        timer: 1500
                    });

                    //sales data 
                    if (data.salesOrders) {
                        console.log(data.salesOrders[0].totalAmount);


                        // Create and append rows to display the selected date range and details
                        let tableBody = document.getElementById('reportBody');
                        tableBody.innerHTML = ''; // Clear previous content

                        for (let sales of data.salesOrders) { // Use data.salesOrders here

                            let row = tableBody.insertRow();
                            let cellOrderedOn = row.insertCell(0);
                            let cellOrderID = row.insertCell(1);
                            let cellTotalAmount = row.insertCell(2);
                            let cellPayment = row.insertCell(3);
                            let cellShippingAddress = row.insertCell(4)

                            cellOrderedOn.textContent = new Date(sales.orderDate).toLocaleString('en-AU', {
                                year: 'numeric',
                                month: '2-digit',
                                day: '2-digit'
                            });
                            cellOrderID.textContent = sales._id;
                            cellTotalAmount.textContent = sales.totalAmount;
                            cellPayment.textContent = sales.paymentMethod;
                            cellShippingAddress.innerHTML = `${sales.shippingAddress.fullname},<br> ${sales.shippingAddress.mobile},<br> ${sales.shippingAddress.address},<br> ${sales.shippingAddress.pincode},<br> ${sales.shippingAddress.city}, ${sales.shippingAddress.state}`;
                        }

                    } else {
                        console.log('No salesOrders data available.');
                    }

                } else {
                    Swal.fire({
                        position: "center",
                        icon: "error",
                        title: data.error,
                        showConfirmButton: false,
                        timer: 2000
                    });
                }
            }).catch(error => {
                console.log(error);
            });



        });
    </script>






