        <script>

            document.querySelectorAll('.block-button ').forEach((button) => {
                button.addEventListener('click', () => {
                    let userID = button.getAttribute('data-userid');

                    let currentState = button.getAttribute('data-state')
                    console.log(currentState);
                    let url

                    if (currentState == 'Unblocked') {
                        url = `/admin/block-user/${userID}`

                    } else {
                        url = `/admin/Unblock-user/${userID}`
                    }
                    fetch(url, {
                        method: 'PATCH',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    }).then(response => {
                        return response.json();
                    }).then(data => {
                        if (data.message) {

                            if (currentState == 'Unblocked') {
                                button.setAttribute('data-state', 'Blocked')
                                button.textContent = 'Unblock'
                                button.classList.replace('btn-green', 'btn-red');
                                Swal.fire({
                                    position: "center",
                                    icon: "info",
                                    title: "The User is Blocked",
                                    showConfirmButton: false,
                                    timer: 1500
                                });

                            } else {
                                button.setAttribute('data-state', 'Unblocked')
                                button.textContent = 'Block'
                                button.classList.replace('btn-red', 'btn-green');
                                Swal.fire({
                                    position: "center",
                                    icon: "success",
                                    title: "The User is Unblocked",
                                    showConfirmButton: false,
                                    timer: 1500
                                });

                            }

                        }
                    }).catch(error => {
                        console.log(error);
                    })

                })
            })

        </script>



