    <script>
        function added() {
            Swal.fire({
                position: "center",
                icon: "success",
                title: "The product is added successfully",
                showConfirmButton: false,
                timer: 1500
            }).then(() => {
                // After the alert is closed, submit the form
                document.getElementById('addProductForm').submit(); 
            });
    
            return false;
        }
    </script>
    



